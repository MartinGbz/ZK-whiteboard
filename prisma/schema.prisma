// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  vaultId   String @id
  text      String
  positionX Float
  positionY Float
  order     Int    @default(autoincrement())
  color     String
}
